


<% comments.forEach(comment => { %>

<div class="commentBoard">

    <%= comment.comment_text %>

    <br>
<div id='edit'>
<form class="editForm" method="POST" action="/encounters/comments/one/<%= comment.comment_id %>?_method=PUT">
        <input type="text" name="comment_text" id="commentText" placeholder="Update comment?">
        <button type="submit">UPDATE</button>
    </form>
</div>
<div id ="delete">
<form method="POST" action="/encounters/comments/one/<%=comment.comment_id %>?_method=DELETE">
    <button type="submit">DELETE</button>
</form>

</div>

</div>

</div>


    <% }); %>

